@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.BlogPost>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
	Layout = "Master.cshtml";
}

<main class="container py-4 my-4 my-md-5 card-clean">

<header class="mb-4">
  <h1 class="display-6 fw-bold mb-2">@Model.Title</h1>
  <div class="d-flex flex-wrap gap-3 small text-muted-ink">
    <span><i class="bi bi-calendar-event me-1"></i>@Model.PublishedOn.ToString("MMMM dd, yyyy")</span>
    <span><i class="bi bi-person-circle me-1"></i>@Model.Author</span>
  </div>
</header>

<div class="row g-5">
  <div class="col-12">
    <div class="prose">
      @Model.MainContent
    </div>
  </div>

 
</div>

</main>